<section class="arrivals" id="arrivals">

    <h1 class="heading"> <span>new arrivals</span> </h1>

    <div class="swiper-wrapper-arrivals text-dark">
        @foreach (var book in Model)
        {
            <a asp-controller="Book" asp-action="DisplayBook" asp-route-isbn = "@book.Isbn">
                <div class="swiper-slide-arrivals"
                 data-title="@book.Title"
                 data-price="@book.Price"
                 data-description="@book.Desc"
                 data-category="@book.Category"
                 data-url="@book.ImgUrl"
                 data-isbn="@book.Isbn">
                    <div class="image">
                        <img src="~/img/@book.ImgUrl" alt="">
                    </div>
                    <div class="content">
                        <h3>@book.Title</h3>
                        <div class="price">$@book.Price</div>
                        <div class="stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>

    <nav aria-label="...">
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="/Home/Index/@ViewBag.idpagprev" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (var i = 0; i < ViewBag.NumberOfPages; i++)
            {
                var style = (ViewBag.currentPage == @i) ? "active" : "";
                <li class="page-item @style " aria-current="page">
                    <a asp-action="Index" asp-route-id="@(i)" asp-route-SearchString="@ViewData["CurrentFilter"]" class="page-link">@(i +1 ) </a>
                </li>

            }

            <li class="page-item">
                <a class="page-link" href="/Home/Index/@ViewBag.idpagenext" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</section>

